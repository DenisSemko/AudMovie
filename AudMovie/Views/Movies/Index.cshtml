@model IEnumerable<AudMovie.Models.Movie>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Movies</th>
			<th>Genre</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var m in Model)
		{
			<tr>
				<td>@Html.ActionLink(m.Name, "Details", "Movies", new { id = m.Id }, null)</td>
				<td>@m.Genre.Name</td>
			</tr>
		}
	</tbody>
</table>

